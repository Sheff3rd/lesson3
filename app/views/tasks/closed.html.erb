<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<div class='container-fluid'>
<table class="table   table-condensed table-striped ", style="width:40%">
  <thead>
    <tr>
      <th >Chore</th>
      <th class="col-md-1">Priority</th>
      <th class="col-md-1">Status</th>
      <th colspan="3", class="col-md-1"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <% if task.status == 1 %>
      <tr>
        <td><%= task.chore %></td>
        <td><%= task.priority %></td>
        <td><%= "Closed" %></td>
        <td><%= link_to 'Show', task, class: 'btn btn-sm btn-default' %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-sm btn-default' %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-default ' %>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', tasks_path, class: 'btn btn-default' %>
</div>
